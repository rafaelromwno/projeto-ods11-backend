@model CidadeUnida.Models.Contato

@{
    ViewData["Title"] = "Criar";
}

<h1 class="text-3xl font-bold text-center mb-6">Criar Novo Contato</h1>

<h4 class="text-lg font-semibold text-gray-700">Contato</h4>
<hr class="my-4 border-gray-300" />

<div class="flex justify-center">
    <div class="w-full max-w-lg">
        <form asp-action="Create" class="bg-white p-6 rounded-lg shadow-md space-y-4">
            <div asp-validation-summary="ModelOnly" class="text-red-500"></div>

            @*  
                <div class="mb-4">
                <label asp-for="IdContato" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="IdContato" class="w-full border border-gray-300 p-2 rounded focus:outline-none focus:border-blue-500" autofocus/>
                <span asp-validation-for="IdContato" class="text-red-500 text-sm"></span>
                </div> 
            *@

            <div class="mb-4">
                <label asp-for="NomeRemetente" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="NomeRemetente" autofocus class="w-full border border-gray-300 p-2 rounded focus:outline-none focus:border-blue-500" />
                <span asp-validation-for="NomeRemetente" class="text-red-500 text-sm"></span>
            </div>

            <div class="mb-4">
                <label asp-for="EmailRemetente" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="EmailRemetente" class="w-full border border-gray-300 p-2 rounded focus:outline-none focus:border-blue-500" />
                <span asp-validation-for="EmailRemetente" class="text-red-500 text-sm"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Mensagem" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="Mensagem" class="w-full border border-gray-300 p-2 rounded focus:outline-none focus:border-blue-500" />
                <span asp-validation-for="Mensagem" class="text-red-500 text-sm"></span>
            </div>

            <div class="mb-4">
                <label asp-for="DataEnvio" class="block text-sm font-medium text-gray-700"></label>
                <input asp-for="DataEnvio" class="w-full border border-gray-300 p-2 rounded focus:outline-none focus:border-blue-500" />
                <span asp-validation-for="DataEnvio" class="text-red-500 text-sm"></span>
            </div>

            <div class="flex justify-between">
                <input type="submit" value="Criar" class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded transition" />
                <a asp-action="Index" class="text-blue-500 hover:underline">Voltar para a Lista</a>
            </div>
        </form>
    </div>
</div>
