@model CidadeUnida.Models.Denuncia

@{
    ViewData["Title"] = "Criar";
}

<h1 class="text-3xl font-bold text-center mb-6">Criar Denúncia</h1>

<h4 class="text-lg font-semibold text-gray-700">Denúncia</h4>
<hr class="my-4 border-gray-300" />

<div class="flex justify-center">
    <div class="w-full max-w-lg">
        <form asp-action="Criar" class="bg-white p-6 rounded-lg shadow-md space-y-4">
            <div asp-validation-summary="ModelOnly" class="text-red-500"></div>

            <div class="mb-4">
                <label asp-for="Descricao" class="block text-sm font-medium text-gray-700">Descrição</label>
                <input asp-for="Descricao" autofocus class="w-full border border-gray-300 p-2 rounded focus:outline-none focus:border-blue-500"/>
                <span asp-validation-for="Descricao" class="text-red-500 text-sm"></span>
            </div>

            <!-- Campo Categoria -->
            <div class="mb-4">
                <label asp-for="Categoria" class="block text-sm font-medium text-gray-700">Categoria</label>
                <select asp-for="Categoria" class="w-full border border-gray-300 p-2 rounded focus:outline-none focus:border-blue-500">
                    <option value="0">Lixo na Rua</option>
                    <option value="1">Árvore Caída</option>
                    <option value="2">Vazamento de Água</option>
                    <option value="3">Obra Irregular</option>
                    <option value="4">Outros</option>
                </select>
                <span asp-validation-for="Categoria" class="text-red-500 text-sm"></span>
            </div>

            <!-- Campo Status -->
            <div class="mb-4">
                <label asp-for="Status" class="block text-sm font-medium text-gray-700">Status</label>
                <select asp-for="Status" class="w-full border border-gray-300 p-2 rounded focus:outline-none focus:border-blue-500">
                    <option value="1">Pendente</option>
                    <option value="2">Em Andamento</option>
                    <option value="3">Resolvido</option>
                    <option value="4">Arquivado</option>
                </select>
                <span asp-validation-for="Status" class="text-red-500 text-sm"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Rua" class="block text-sm font-medium text-gray-700">Rua</label>
                <input asp-for="Rua" class="w-full border border-gray-300 p-2 rounded focus:outline-none focus:border-blue-500" />
                <span asp-validation-for="Rua" class="text-red-500 text-sm"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Numero" class="block text-sm font-medium text-gray-700">Número</label>
                <input asp-for="Numero" class="w-full border border-gray-300 p-2 rounded focus:outline-none focus:border-blue-500" />
                <span asp-validation-for="Numero" class="text-red-500 text-sm"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Bairro" class="block text-sm font-medium text-gray-700">Bairro</label>
                <input asp-for="Bairro" class="w-full border border-gray-300 p-2 rounded focus:outline-none focus:border-blue-500" />
                <span asp-validation-for="Bairro" class="text-red-500 text-sm"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Cidade" class="block text-sm font-medium text-gray-700">Cidade</label>
                <input asp-for="Cidade" class="w-full border border-gray-300 p-2 rounded focus:outline-none focus:border-blue-500" />
                <span asp-validation-for="Cidade" class="text-red-500 text-sm"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Estado" class="block text-sm font-medium text-gray-700">Estado</label>
                <input asp-for="Estado" class="w-full border border-gray-300 p-2 rounded focus:outline-none focus:border-blue-500" />
                <span asp-validation-for="Estado" class="text-red-500 text-sm"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Cep" class="block text-sm font-medium text-gray-700">CEP</label>
                <input asp-for="Cep" class="w-full border border-gray-300 p-2 rounded focus:outline-none focus:border-blue-500" />
                <span asp-validation-for="Cep" class="text-red-500 text-sm"></span>
            </div>

            <div class="mb-4">
                <label asp-for="UrlImagem" class="block text-sm font-medium text-gray-700">URL da Imagem</label>
                <input asp-for="UrlImagem" class="w-full border border-gray-300 p-2 rounded focus:outline-none focus:border-blue-500" />
                <span asp-validation-for="UrlImagem" class="text-red-500 text-sm"></span>
            </div>

            <div class="mb-4">
                <label asp-for="IsAnonimo" class="block text-sm font-medium text-gray-700">É Anônimo?</label>
                <input asp-for="IsAnonimo" type="checkbox" class="rounded focus:outline-none focus:border-blue-500" />
                <span asp-validation-for="IsAnonimo" class="text-red-500 text-sm"></span>
            </div>

            <div class="mb-4">
                <label asp-for="DataEnvio" class="block text-sm font-medium text-gray-700">Data de Envio</label>
                <input asp-for="DataEnvio" type="datetime-local" class="w-full border border-gray-300 p-2 rounded focus:outline-none focus:border-blue-500" />
                <span asp-validation-for="DataEnvio" class="text-red-500 text-sm"></span>
            </div>

            <div class="flex justify-between">
                <input type="submit" value="Criar" class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded transition" />
                <a asp-action="ListarDenuncias" class="text-blue-500 hover:underline">Voltar para a Lista</a>
            </div>
        </form>
    </div>
</div>



