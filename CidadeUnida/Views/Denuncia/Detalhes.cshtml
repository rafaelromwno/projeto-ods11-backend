@model CidadeUnida.Models.Denuncia

@{
    ViewData["Title"] = "Detalhes";
}

<h1 class="text-3xl font-bold text-center mb-6">Detalhes da Denúncia</h1>

<div class="bg-white shadow-lg rounded-lg p-6 mb-6">
    <h4 class="text-xl font-semibold text-gray-800 mb-4">Denúncia</h4>
    <hr class="mb-4" />
    <dl class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div class="flex flex-col">
            <dt class="text-gray-600 font-semibold">ID:</dt>
            <dd class="text-gray-800">@Html.DisplayFor(model => model.IdDenuncia)</dd>
        </div>

        <div class="flex flex-col">
            <dt class="text-gray-600 font-semibold">Descrição:</dt>
            <dd class="text-gray-800">@Html.DisplayFor(model => model.Descricao)</dd>
        </div>

        <div class="flex flex-col">
            <dt class="text-gray-600 font-semibold">Status:</dt>
            <dd class="text-gray-800">@Html.DisplayFor(model => model.Status)</dd> <!-- Utilizando o método de extensão -->
        </div>

        <div class="flex flex-col">
            <dt class="text-gray-600 font-semibold">Categoria:</dt>
            <dd class="text-gray-800">@Html.DisplayFor(model => model.Categoria)</dd> <!-- Utilizando o método de extensão -->
        </div>

        <div class="flex flex-col">
            <dt class="text-gray-600 font-semibold">Rua:</dt>
            <dd class="text-gray-800">@Html.DisplayFor(model => model.Rua)</dd>
        </div>

        <div class="flex flex-col">
            <dt class="text-gray-600 font-semibold">Número:</dt>
            <dd class="text-gray-800">@Html.DisplayFor(model => model.Numero)</dd>
        </div>

        <div class="flex flex-col">
            <dt class="text-gray-600 font-semibold">Bairro:</dt>
            <dd class="text-gray-800">@Html.DisplayFor(model => model.Bairro)</dd>
        </div>

        <div class="flex flex-col">
            <dt class="text-gray-600 font-semibold">Cidade:</dt>
            <dd class="text-gray-800">@Html.DisplayFor(model => model.Cidade)</dd>
        </div>

        <div class="flex flex-col">
            <dt class="text-gray-600 font-semibold">Estado:</dt>
            <dd class="text-gray-800">@Html.DisplayFor(model => model.Estado)</dd>
        </div>

        <div class="flex flex-col">
            <dt class="text-gray-600 font-semibold">CEP:</dt>
            <dd class="text-gray-800">@Html.DisplayFor(model => model.Cep)</dd>
        </div>

        <div class="flex flex-col">
            <dt class="text-gray-600 font-semibold">URL da Imagem:</dt>
            <dd class="text-gray-800">@Html.DisplayFor(model => model.UrlImagem)</dd>
        </div>

        <div class="flex flex-col">
            <dt class="text-gray-600 font-semibold">É Anônimo?</dt>
            <dd class="text-gray-800">@Html.DisplayFor(model => model.IsAnonimo)</dd>
        </div>

        <div class="flex flex-col">
            <dt class="text-gray-600 font-semibold">Data de Envio:</dt>
            <dd class="text-gray-800">@Html.DisplayFor(model => model.DataEnvio)</dd>
        </div>
    </dl>
</div>

<div class="flex space-x-4">
    <a asp-action="Editar" asp-controller="Denuncia" asp-route-id="@Model.IdDenuncia" class="text-blue-500 hover:underline">Editar</a>
    <a asp-action="ListarDenuncias" asp-controller="Denuncia" class="text-gray-500 hover:underline">Voltar para a Lista</a>
</div>

