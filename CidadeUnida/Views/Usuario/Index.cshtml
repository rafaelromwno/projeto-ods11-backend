@model IEnumerable<CidadeUnida.Models.Usuario>

@{
    ViewData["Title"] = "Listar Usuarios";
}

<h1 class="text-3xl font-bold text-center mb-6">Listar Usuários</h1>

<p class="mb-4 text-left">
    <a asp-action="Create" asp-controller="Usuario" class="inline-block bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600 transition">
        Criar Novo Usuário
    </a>
</p>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
    @foreach (var item in Model)
    {
        <div class="bg-white shadow-lg rounded-lg p-6 hover:bg-gray-200 transition">
            <div class="mb-2">
                <span class="block text-gray-700 font-semibold">ID:</span>
                <p class="text-gray-800">@Html.DisplayFor(modelItem => item.IdUsuario)</p>
            </div>

            <div class="mb-2">
                <span class="block text-gray-700 font-semibold">Nome:</span>
                <p class="text-gray-800">@Html.DisplayFor(modelItem => item.Nome)</p>
            </div>

            <div class="mb-2">
                <span class="block text-gray-700 font-semibold">Email:</span>
                <p class="text-gray-800">@Html.DisplayFor(modelItem => item.Email)</p>
            </div>

            <div class="mb-2">
                <span class="block text-gray-700 font-semibold">Telefone:</span>
                <p class="text-gray-800">@Html.DisplayFor(modelItem => item.Telefone)</p>
            </div>

            <div class="mb-2">
                <span class="block text-gray-700 font-semibold">Senha:</span>
                <p class="text-gray-800">@Html.DisplayFor(modelItem => item.Senha)</p>
            </div>

            <div class="mb-2">
                <span class="block text-gray-700 font-semibold">Admin:</span>
                <p class="text-gray-800">@Html.DisplayFor(modelItem => item.IsAdm)</p>
            </div>

            <div class="mb-2">
                <span class="block text-gray-700 font-semibold">Ativo:</span>
                <p class="text-gray-800">@Html.DisplayFor(modelItem => item.Ativo)</p>
            </div>

            <div class="flex space-x-4 mt-4">
                <a asp-action="Edit" asp-controller="Usuario" asp-route-id="@item.IdUsuario" class="text-blue-500 hover:underline">Editar</a>
                <a asp-action="Details" asp-controller="Usuario" asp-route-id="@item.IdUsuario" class="text-green-500 hover:underline">Detalhes</a>
                <a asp-action="Delete" asp-controller="Usuario" asp-route-id="@item.IdUsuario" class="text-red-500 hover:underline" onclick="return confirm('Deseja excluir este usuário?');">Excluir</a>
            </div>
        </div>
    }
</div>
