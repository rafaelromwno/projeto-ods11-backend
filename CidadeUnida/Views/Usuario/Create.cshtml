@model CidadeUnida.Models.Usuario

@{
    ViewData["Title"] = "Criar";
}

<h1 class="text-3xl font-bold text-center mb-6">Criar Usuário</h1>

<h4 class="text-lg font-semibold text-gray-700">Usuário</h4>
<hr class="my-4 border-gray-300" />

<div class="flex justify-center">
    <div class="w-full max-w-lg">
        <form asp-action="Create" class="bg-white p-6 rounded-lg shadow-md space-y-4">
            <div asp-validation-summary="ModelOnly" class="text-red-500"></div>

            <div class="mb-4">
                <label asp-for="Nome" class="block text-sm font-medium text-gray-700">Nome</label>
                <input asp-for="Nome" autofocus class="w-full border border-gray-300 p-2 rounded focus:outline-none focus:border-blue-500" />
                <span asp-validation-for="Nome" class="text-red-500 text-sm"></span>
            </div>

            <!-- Campo Email -->
            <div class="mb-4">
                <label asp-for="Email" class="block text-sm font-medium text-gray-700">Email</label>
                <input asp-for="Email" class="w-full border border-gray-300 p-2 rounded focus:outline-none focus:border-blue-500" />
                <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
            </div>

            <!-- Campo Telefone -->
            <div class="mb-4">
                <label asp-for="Telefone" class="block text-sm font-medium text-gray-700">Telefone</label>
                <input asp-for="Telefone" class="w-full border border-gray-300 p-2 rounded focus:outline-none focus:border-blue-500" />
                <span asp-validation-for="Telefone" class="text-red-500 text-sm"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Senha" class="block text-sm font-medium text-gray-700">Senha:</label>
                <input asp-for="Senha" type="password" class="w-full border border-gray-300 p-2 rounded focus:outline-none focus:border-blue-500" />
                <span asp-validation-for="Senha" class="text-red-500 text-sm"></span>
            </div>

            <!-- Campo Administrador -->
            <div class="mb-4">
                <label asp-for="IsAdm" class="block text-sm font-medium text-gray-700">Administrador</label>
                <select asp-for="IsAdm" class="w-full border border-gray-300 p-2 rounded focus:outline-none focus:border-blue-500">
                    <option value="true">Sim</option>
                    <option value="false">Não</option>
                </select>
                <span asp-validation-for="IsAdm" class="text-red-500 text-sm"></span>
            </div>

            <!-- Campo Ativo -->
            <div class="mb-4">
                <label asp-for="Ativo" class="block text-sm font-medium text-gray-700">Ativo</label>
                <select asp-for="Ativo" class="w-full border border-gray-300 p-2 rounded focus:outline-none focus:border-blue-500">
                    <option value="true">Sim</option>
                    <option value="false">Não</option>
                </select>
                <span asp-validation-for="Ativo" class="text-red-500 text-sm"></span>
            </div>

            <div class="flex justify-between">
                <input type="submit" value="Criar" class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded transition" />
                <a asp-action="Index" class="text-blue-500 hover:underline">Voltar para a Lista</a>
            </div>
        </form>
    </div>
</div>
